{
  "name": "PhotOSINT",
  "version": "0.1.3",
  "description": "OSINT tool for images",
  "manifest_version": 2,
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },
  "permissions": ["storage", "activeTab", "contextMenus", "*://*.*"],
  "options_page": "",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/exif.js",
        "libs/enter-view.min.js",
        "scripts/exif-scanner.js",
        "scripts/dom-watcher.js"
      ],
      "css": ["styles/content.css"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; img-src * data: blob: 'unsafe-inline'; default-src *  data: blob: 'unsafe-inline' 'unsafe-eval'; connect-src * data: blob: 'unsafe-inline';"
}
