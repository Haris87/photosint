{
  "name": "PhotOSINT",
  "version": "0.2.0",
  "description": "OSINT tool for images",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab", "contextMenus"],
  "host_permissions": ["*://*/*"],
  "options_page": "",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/exif.js",
        "libs/enter-view.min.js",
        "scripts/exif-scanner.js",
        "scripts/dom-watcher.js"
      ],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_icon": "icons/icon_512.png",
    "default_popup": "popup/index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src * data: blob: 'unsafe-inline'; default-src *  data: blob: 'unsafe-inline' 'unsafe-eval'; connect-src * data: blob: 'unsafe-inline';"
  }
}
